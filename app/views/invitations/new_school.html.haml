.row
  .span6.offset3
    = form_for @user, :url => school_invitations_path, :html => { :class => 'form-horizontal well' } do |f|

      %fieldset
        %legend
          Create a New School and Invite Its First Planner

        .control-group
          = f.label :email, "Email Address", :class => 'control-label'
          .controls= f.email_field :email

        .control-group
          .controls= f.submit "Invite", :class => 'btn btn-primary'
