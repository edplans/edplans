.row
  .span4
    = form_tag upload_domains_path, :class => 'form-vertical well', :multipart => true do
      %fieldset
        %legend Upload Domains
        .control-group
          = label_tag :file, "File to upload", :class => 'control-label'
          .controls= file_field_tag :file
          %p.help-block Choose a file in .csv format.

        .control-group
          .controls= submit_tag "Upload", :class => 'btn btn-primary'


    %fieldset
      %legend Clear All Domains
      
      %p 
        Pressing this button will delete all domains, 
        including those scheduled by a school. Proceed with caution!

      %p= button_to "Destroy Domains", clear_domains_path, :method => :delete, :class => 'btn btn-danger', :confirm => "Are you very, very sure?"

  
  .span8
