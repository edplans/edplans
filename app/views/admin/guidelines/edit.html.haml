.row
  .span8
    = form_for @guideline, :class => 'form' do |f|

      %fieldset
        %legend= "Edit #{ @guideline.abbreviated_text }"

        .controls
          = f.label :name
          .control-group= f.text_area :name, :class => 'wysiwyg'

        .controls
          = f.label :notes
          .control-group= f.text_area :notes, :class => 'wysiwyg'

        .controls
          .control-group
            = f.submit "Save", :class => 'btn btn-primary'
            = link_to "Cancel", @guideline, :class => 'btn btn-cancel'


    %p= button_to "Delete", @guideline, :method => :delete, :class => 'btn btn-danger', :data => { :confirm => "Are you sure you want to delete this guideline? All associated data will also be deleted." }
