.row
  .span10.offset2
    = form_for @node, :url => curriculum_node_path(@node), :method => :put, :class => 'form' do |f|

      %fieldset
        %legend= "Edit #{ @node.name }"

        .controls
          = f.label :name
          .control-group= f.text_field :name

        .controls
          = f.label :notes
          .control-group= f.text_area :notes, :class => 'wysiwyg', :cols => 70

        .controls
          .control-group
            = f.submit "Save", :class => 'btn btn-primary'
            = link_to "Cancel", curriculum_node_path(@node), :class => 'btn btn-cancel'


    %p= button_to "Delete", curriculum_node_path(@node), :method => :delete, :class => 'btn btn-danger', :data => { :confirm => "Are you sure you want to delete #{ @node.name }? All associated data, including guidelines, will also be deleted." }
